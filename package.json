{
  "name": "ftools-vscode",
  "displayName": "Ftools",
  "description": "Flutter/Dart 项目的国际化文本管理工具",
  "version": "0.0.1",
  "publisher": "scnon",
  "author": {
    "name": "scnon",
    "url": "https://github.com/scnon"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/scnon/ftools-vscode-plugin"
  },
  "bugs": {
    "url": "https://github.com/scnon/ftools-vscode-plugin/issues"
  },
  "homepage": "https://github.com/scnon/ftools-vscode-plugin#readme",
  "keywords": [
    "flutter",
    "dart",
    "i18n",
    "internationalization",
    "translation",
    "chinese"
  ],
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:dart"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ftools-vscode.createTranslation",
        "title": "创建翻译"
      },
      {
        "command": "ftools-vscode.toggleTranslationFold",
        "title": "切换翻译文本折叠"
      }
    ],
    "keybindings": [
      {
        "command": "ftools-vscode.toggleTranslationFold",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}